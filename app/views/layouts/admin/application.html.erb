<!DOCTYPE html>
<html lang="<%=I18n.locale %>">
<head>
<meta charset="utf-8" />
<title><%=t(:service_name)%></title>
<meta name="description" content="<%=t(:service_name)%> Admin System" />
<meta name="author" content="Sleeping-Lion" />
<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes" />
<%= stylesheet_link_tag "admin/admin", :media => "all", "data-turbolinks-track" => true %>
<%= favicon_link_tag 'favicon.ico' %>
<%= csrf_meta_tags %>
<!--[if IE]>
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<![endif]-->
</head>
<body>
	<%= render :partial => 'layouts/admin/header' %>
	<div id="mom" class="container-fluid">
		<div id="main" class="row">
			<%= render :partial => 'layouts/admin/menu' %>
			<div id="content" class="col-xs-12 col-lg-10">
				<% if current_page?(root_path) %>
					<br />
					<% else %>
					<% if(!params[:no_layout] and !current_page?(root_path)) %>
						<ol class="breadcrumb">
							<li><%= link_to t(:home),root_path %></li>
							<% if(@category.present?) %>
							<li><a href="#"><%= @category %></a><% if(@sub_menu) %><% end %></li>
							<% end %>
							<li><a href="#"><%= @sub_menu %></a></li>
							<li><a href="#"><%=actionNameChange controller.action_name %></a></li>
						</ol>
						<hr />
					<% end %>
					<% end %>

		<%= yield %>
					</div>
				</div><!--/#content.span10-->
			</div>
	<%= render :partial => 'layouts/admin/footer' %>
<div class="modal fade" id="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Modal title</h4>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
	<%= javascript_include_tag :application, "data-turbolinks-track" => true %>
</body>
</html>

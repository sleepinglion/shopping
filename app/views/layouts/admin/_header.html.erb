<!-- start: Header -->
<header class="container-fluid">
	<div class="row">
		<h1 class="col-xs-12 col-sm-6 col-md-3 col-lg-2"><%=link_to admin_path,:class=>"brand" do %><span class="hidden-phone"><%=t(:service_name)%> ADMIN 3</span><% end %></h1>
		<nav class="col-xs-12 col-sm-6 col-md-9 col-lg-10">
			<ul class="nav pull-right">
				<li class="dropdown">
					<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
						<% if(current_admin.photo?)  %>
						<%=image_tag current_admin.photo.small_thumb.url %>
						<% end %>&nbsp;
						<%=current_admin.nickname %>
						<span class="caret"></span>
					</a>
					<ul class="dropdown-menu">
						<li><%= link_to edit_admin_registration_path do %><i class="glyphicon glyphicon-user"></i> <%=t(:admin_profile) %><% end %></li>
						<li><%= link_to destroy_admin_session_path do %><i class="glyphicon glyphicon-off"></i> <%=t(:logout) %><% end %></li>
					</ul>
				</li>
			</ul>
		</nav>
	</div>			
</header>
<!-- start: Header -->
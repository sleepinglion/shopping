<% breadcrumb :boards %>
<section id="boards" class="container sub-main">
  <div class="row">
    <div class="col-12">
      <div id="notice_main" class="table-responsive">
        <table width="100%" cellpadding="0" cellspacing="0" class="table">
          <colgroup>
            <col style="width:10%"/>
            <col>
            <col style="width:100px">
            <col style="width:220px">
          </colgroup>
          <thead class="thead-default">
          <tr>
            <th><%= t(:user, scope: [:activerecord, :attributes, :board]) %></th>
            <th><%= t(:title, scope: [:activerecord, :attributes, :board]) %></th>
            <th class="text-center"><%= t(:label_count) %></th>
            <th class="text-center"><%= t(:created_at, scope: [:activerecord, :attributes, :board]) %></th>
          </tr>
          </thead>
          <tbody>
          <% unless @boards.empty? %>
            <% @boards.each do |board| %>
              <tr>
                <td class=""><%= board.admin.name %></td>
                <td><%= link_to board.title, board %></td>
                <td class="text-right"><%= board.impressionist_count(:filter => :ip_address) %></td>
                <td class="text-right text-secondary"><%= I18n.l board.created_at.to_date, :format => :long %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4"><%= t(:no_data) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <div id="sl_bottom_menu">
          <%= link_to t(:link_new), new_board_path %>
          <%= paginate @boards, theme: 'main' %>
        </div>
      </div>
    </div>
  </div>
</section>
<%= form_for @board,:html=>{:class=>'col-12'} do |f| %>
	<% if @board.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@board.errors.count, "error") %> prohibited this notice from being saved:</h2>
		<ul>
			<% @board.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, :class=>'form-control', :required=>'required' %>
	</div>
	<%= f.fields_for :notice_content do |c| %>
	<div class="form-group">
		<%= c.label :content %>
		<%= c.text_area :content, :id => "sl_content", :class=>'form-control' %>
	</div>
	<% end %>
	<div class="form-group actions">
		<%= f.submit :class=>"btn btn-primary" %>
	</div>
<% end %>

<% if flash.count > 0 %>
<div id="sl_message" class="alert alert-danger col-xs-10 col-xs-offset-1" role="alert" >
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <% flash.each do |name, msg| %>
          <%= content_tag :p, msg, id: "flash_#{name}" %>
       <% end %>
   </div>
<% end %>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:class=>"form-horizontal",:id=>"sl_login_form",:role=>"form"} ) do |f| %>
	<div class="form-group">
		<label for="sl_email" class="col-sm-2 control-label"><%=t(:email) %></label>
		<div class="col-sm-10">
			<%= f.text_field :email, :autofocus => true, :class=>"form-control",:required=>"required", :placeholder=>t(:login_p_id) %>
		</div>
	</div>
	<div class="form-group">
		<label for="sl_password" class="col-sm-2 control-label"><%=t(:password) %></label>
		<div class="col-sm-10">
			<%= f.password_field :password,:class=>"form-control",:required=>"required", :placeholder=>t(:login_p_password) %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<div class="checkbox">
				<label>
					<input type="checkbox" name="remember_me" id="remember_me">
					<%= t(:remember_me) %>
				</label>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-primary">
				<%= t(:login) %>
			</button>
		</div>
	</div>
<% end %>

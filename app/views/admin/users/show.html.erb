<% if notice %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<div class="sl_show">
	<table class="table table-striped table-bordered">
		<tr>
			<th><%=t(:label_email) %></th>
			<td>
				<% if @user.email.present? %>
				<%=mail_to @user.email %>
				<% else %>
				<%=t(:no_insert_data)%>			
				<% end %>
			</td>
		</tr>
		<tr>
			<th><%=t(:label_name) %></th>
			<td>
				<% if @user.name.present? %>
				<%=@user.name %>
				<% else %>
				<%=t(:no_insert_data)%>
				<% end %>
			</td>
		</tr>
		<tr>
			<th><%=t(:label_phone) %></th>
			<td>
				<%=@user.phone %>
			</td>
		</tr>
		<tr>
			<th><%=t(:label_birthday) %></th>
			<td>
				<%=@user.birthday %>
			</td>
		</tr>
		<tr>
			<th><%=t(:label_height) %></th>
			<td>
				<%= @user.height %>
			</td>
		</tr>
		<tr>
			<th><%=t(:label_weight) %></th>
			<td>
				<%= @user.weight %>
			</td>
		</tr>								
		<tr>
			<th><%=t(:label_flag) %></th>
			<td>
				<%=raw flagToString(@user.enable) %>
			</td>
		</tr>
		<tr>
			<th><%=t(:label_updated_at) %></th>
			<td>
				<%= @user.created_at %>
			</td>
		</tr>
		<tr>
			<th><%=t(:label_created_at) %></th>
			<td>
				<%= @user.updated_at %>
			</td>
		</tr>
	</table>
</div>
<% if(!params[:no_layout]) %>
<% if can? :update, User %>		
<%= link_to t(:link_edit), edit_admin_user_path(@user) %> |
<% end %>
<%= link_to t(:link_list), admin_users_path() %>
<% end %>
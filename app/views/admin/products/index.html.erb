<div class="row">
	<h3 class="col-xs-12 col-sm-6"><%= @controller_name %> <%= actionNameChange controller.action_name %></h3>
	<div class="col-xs-12 col-sm-6">
		<%=form_tag admin_products_path,:method=>:get,:class=>"form-search pull-right" do %>
		<%= render :partial => 'layouts/admin/search_form' %>
		<% end %>
	</div>
</div>
<div class="table-responsive">
	<table class="table table-bordered table-striped">
		<colgroup>
			<col style="width:80px;" />
			<col />
			<col style="width:100px;" />
			<col style="width:100px;" />						
			<col style="width:80px;" />
			<col style="width:100px;" />
			<% if can?(:update, Product) || can?(:delete, Product) %>
			<col <%= raw manage_width(Product) %> />
			<% end %>
		</colgroup>
		<thead>
			<tr>
				<th><%= t(:label_number) %></th>
				<th><%= t(:label_title) %></th>
				<th><%= t(:label_price) %></th>
				<th><%= t(:label_shipping_price) %></th>
				<th><%= t(:label_flag) %></th>
				<th><%= t(:label_created_at) %></th>
				<% if can?(:update, Product) || can?(:delete, Product) %>
				<th><%= t(:label_manage) %></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% unless @products.empty? %>
			<% @products.each do |product| %>
			<tr>
				<td><%= link_to product.id,admin_product_path(product) %></td>
				<td class="mw"><%= link_to product.title,admin_product_path(product) %></td>
				<td><%=product.price %></td>
				<td><%=product.shipping_price %></td>
				<td><%= raw flagToString(product.enable) %></td>
				<td><%= product.created_at.to_date %></td>
				<% if can?(:update, Product) || can?(:delete, Product) %>
				<td> <% if can? :update, product %>
				<%= link_to edit_admin_product_path(product),:class=>"btn btn-default" do %> <i class="glyphicon glyphicon-pencil"></i> <%= t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, product %>
				<%= link_to admin_product_path(product), :method => :delete, :data => { :confirm => t(:delete_confirm) },:class=>"btn btn-danger" do %> <i class="glyphicon glyphicon-trash"></i> <%= t(:link_delete) %>
				<% end %>
				<% end %> </td>
				<% end %>
			</tr>
			<% end %>
			<% else %>
			<tr>
				<td colspan="5"><%= t(:no_data)%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create, Product %>
		<%= link_to new_admin_product_path,:class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @products %>
</div>

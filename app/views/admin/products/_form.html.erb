<%= form_for [:admin,@product] do |f| %>
<% if @product.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
	<a href="#" class="close" data-dismiss="alert">&times;</a>
	<h2><%= pluralize(@product.errors.count, "error") %> prohibited this request from being saved:</h2>
	<ul>
		<% @product.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :price %>
	<%= f.number_field :price,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :shipping_price %>
	<%= f.number_field :shipping_price,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :description %>
	<%= f.text_area :description,:id=>"sl_content",:class=>"form-control",:rows=>10,:cols=>50,:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :enable %>
	<%= f.check_box :enable %>
</div>
<div class="form-group actions">
	<%= f.submit :class=>"btn btn-primary" %>
</div>
<% end %>

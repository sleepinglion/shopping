<%= form_with(model: [:admin, slider], local: true) do |form| %>
  <% if slider.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <h2><%= pluralize(slider.errors.count, "error") %> prohibited this request from being saved:</h2>
      <ul>
        <% slider.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, :class => 'form-control', :required => 'required' %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_field :description, :class => 'form-control', :required => 'required' %>
      </div>
      <div class="form-group">
        <%= form.label :picture %>
        <%= form.file_field :picture, :class => "form-control-file" %>
      </div>
    </div>
  </div>
  <div class="form-group actions">
    <%= form.submit :class => "btn btn-primary btn-block btn-lg" %>
  </div>
<% end %>
<%= form_with(model: [:admin,product_category], local: true) do |form| %>
  <% if product_category.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <h2><%= pluralize(product_category.errors.count, "error") %> prohibited this request from being saved:</h2>
      <ul>
        <% product_category.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, :class => "form-control", :required => "required" %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_field :description, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :bg_color %>
        <%= form.color_field :bg_color, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :order_no %>
        <%= form.number_field :order_no, :class => "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= form.submit :class => 'btn btn-primary btn-block btn-lg' %>
  </div>
<% end %>
<%= form_with(model: [:admin, location], local: true) do |form| %>
  <% if location.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this request from being saved:</h2>
      <ul>
        <% location.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, :class => "form-control", :required => "required" %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_field :description, :class => "form-control", :required => "required" %>
      </div>
      <div class="form-group">
        <%= form.label :address %>
        <%= form.text_field :address, :class => "form-control", :required => "required" %>
      </div>
      <div class="form-group">
        <%= form.label :lat %>
        <%= form.text_field :lat, :class => "form-control", :required => "required" %>
      </div>
      <div class="form-group">
        <%= form.label :lng %>
        <%= form.text_field :lng, :class => "form-control", :required => "required" %>
      </div>
      <div class="form-group">
        <%= form.label :marker_lat %>
        <%= form.text_field :marker_lat, :class => "form-control", :required => "required" %>
      </div>
      <div class="form-group">
        <%= form.label :marker_lng %>
        <%= form.text_field :marker_lng, :class => "form-control", :required => "required" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= form.submit :class => 'btn btn-primary btn-block btn-lg' %>
  </div>
<% end %>
<div class="row">
	<h3 class="col-xs-12 col-sm-6"><%= @controller_name %> <%= actionNameChange controller.action_name %></h3>
	<div class="col-xs-12 col-sm-6">
		<%=form_tag admin_guests_path,:method=>:get,:class=>"form-search pull-right" do %>
		<%= render :partial => 'layouts/admin/search_form' %>
		<% end %>
	</div>
</div>
<div class="table-responsive">
	<table class="table table-bordered table-striped">
		<colgroup>
			<col style="width:80px;" />
			<col />
			<col />
			<col />
			<col style="width:80px;" />									
			<col style="width:80px;" />
			<col style="width:100px;" />
			<% if can?(:update, Guest) || can?(:delete, Guest) %>
			<col <%= raw manage_width(Guest) %> />
			<% end %>
		</colgroup>
		<thead>
			<tr>
				<th><%= t(:label_number) %></th>
				<th><%= t(:label_name) %></th>
				<th><%= t(:label_email) %></th>
				<th><%= t(:label_phone) %></th>
				<th><%= t(:label_order_id) %></th>							
				<th><%= t(:label_flag) %></th>
				<th><%= t(:label_created_at) %></th>
				<% if can?(:update, Guest) || can?(:delete, Guest) %>
				<th><%= t(:label_manage) %></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% unless @guests.empty? %>
			<% @guests.each do |guest| %>
			<tr>
				<td><%= link_to guest.id,admin_guest_path(guest) %></td>
				<td class="mw"><%= link_to guest.name,admin_guest_path(guest) %></td>
				<td><%= guest.email %></td>
				<td><%= guest.phone %></td>
				<td><%= link_to guest.order_id,admin_order_path(guest.order) %></td>						
				<td><%= raw flagToString(guest.enable) %></td>
				<td><%= guest.created_at.to_date %></td>
				<% if can?(:update, Guest) || can?(:delete, Guest) %>
				<td> <% if can? :update, guest %>
				<%= link_to edit_admin_guest_path(guest),:class=>"btn btn-default" do %> <i class="glyphicon glyphicon-pencil"></i> <%= t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, guest %>
				<%= link_to admin_guest_path(guest), :method => :delete, :data => { :confirm => t(:delete_confirm) },:class=>"btn btn-danger" do %> <i class="glyphicon glyphicon-trash"></i> <%= t(:link_delete) %>
				<% end %>
				<% end %> </td>
				<% end %>
			</tr>
			<% end %>
			<% else %>
			<tr>
				<td colspan="8"><%= t(:no_data)%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create, Guest %>
		<%= link_to new_admin_guest_path,:class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @guests %>
</div>

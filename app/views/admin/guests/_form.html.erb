<%= form_for [:admin,@shipping] do |f| %>
<% if @shipping.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
	<a href="#" class="close" data-dismiss="alert">&times;</a>
	<h2><%= pluralize(@shipping.errors.count, "error") %> prohibited this request from being saved:</h2>
	<ul>
		<% @shipping.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="form-group">
	<%= f.label :same_order %>
	<%= f.check_box :same_order %>
</div>
<div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :email %>
	<%= f.email_field :email,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :phone %>
	<%= f.text_field :phone,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :zip_code %>
	<%= f.text_field :zip_code,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :address_default %>
	<%= f.text_field :address_default,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :address_detail %>
	<%= f.text_field :address_detail,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :message %>
	<%= f.text_area :message,:id=>"sl_content",:class=>"form-control",:rows=>10,:cols=>50 %>
</div>
<div class="form-group">
	<%= f.label :enable %>
	<%= f.check_box :enable %>
</div>
<div class="form-group actions">
	<%= f.submit :class=>"btn btn-primary" %>
</div>
<% end %>

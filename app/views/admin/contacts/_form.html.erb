<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this request from being saved:</h2>
      <ul>
        <% contact.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, :class => "form-control", :required => "required" %>
      </div>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, :class => 'form-control', :required => "required" %>
      </div>
      <div class="form-group">
        <%= form.label :phone %>
        <%= form.text_field :phone, :class => 'form-control', :required => "required" %>
      </div>
      <%= form.fields_for :contact_content do |c| %>
        <div class="form-group">
          <%= c.label :content %>
          <%= c.text_area :content, :id => "sl_content", :class => 'form-control', :required => "required", :rows => 10, :cols => 50 %>
        </div>
      <% end %>
      <div class="form-group">
        <%= form.label :enable %>
        <%= form.check_box :enable %>
      </div>
    </div>
  </div>
  <div class="form-group actions">
    <%= form.submit :class => "btn btn-primary btn-block btn-lg" %>
  </div>
<% end %>

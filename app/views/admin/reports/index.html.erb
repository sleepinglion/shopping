<div class="row">
	<h3 class="col-xs-12 col-sm-6"><%= @controller_name %> <%= actionNameChange controller.action_name %></h3>
	<div class="col-xs-12 col-sm-6">
		<%=form_tag admin_reports_path,:method=>:get,:class=>"form-search pull-right" do %>
		<%= render :partial => 'layouts/admin/search_form' %>
		<% end %>
	</div>
</div>
<div class="table-responsive">
	<table class="table table-bordered table-striped">
		<colgroup>
			<col style="width:80px;" />	
			<col style="width:80px;" />
			<col style="width:80px;" />
			<col />							
			<col style="width:80px;" />
			<col style="width:100px;" />
			<% if can?(:update, Report) || can?(:delete, Report) %>
			<col <%= raw manage_width(Report) %> />
			<% end %>
		</colgroup>
		<thead>
			<tr>
				<th><%= t(:label_number) %></th>
				<th><%= t(:label_order) %></th>
				<th><%= t(:label_category) %></th>
				<th><%= t(:label_gene_category) %></th>											
				<th><%= t(:label_flag) %></th>
				<th><%= t(:label_created_at) %></th>
				<% if can?(:update, Report) || can?(:delete, Report) %>
				<th><%= t(:label_manage) %></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% unless @reports.empty? %>
			<% @reports.each do |report| %>
			<tr>
				<td><%= link_to report.id,admin_report_path(report) %></td>
				<td><%= link_to report.order.id,admin_order_path(report.order.id) %></td>
				<td><%= link_to report.report_category.title,admin_report_category_path(report.report_category.id) %></td>
				<td><%= link_to report.gene_category.title,admin_gene_category_path(report.gene_category.id) %></td>					
				<td><%= raw flagToString(report.enable) %></td>
				<td><%= report.created_at.to_date %></td>
				<% if can?(:update, Report) || can?(:delete, Report) %>
				<td> <% if can? :update, report %>
				<%= link_to edit_admin_report_path(report),:class=>"btn btn-default" do %> <i class="glyphicon glyphicon-pencil"></i> <%= t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, report %>
				<%= link_to admin_report_path(report), :method => :delete, :data => { :confirm => t(:delete_confirm) },:class=>"btn btn-danger" do %> <i class="glyphicon glyphicon-trash"></i> <%= t(:link_delete) %>
				<% end %>
				<% end %> </td>
				<% end %>
			</tr>
			<% end %>
			<% else %>
			<tr>
				<td colspan="5"><%= t(:no_data)%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create, Report %>
		<%= link_to new_admin_report_path,:class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @reports %>
</div>

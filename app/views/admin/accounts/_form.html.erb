<%= form_with(model: account, local: true) do |form| %>
  <% if account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(account.errors.count, "error") %> prohibited this gg from being saved:</h2>

      <ul>
        <% account.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :account_category_id %>
    <%= form.select :account_category_id,options_from_collection_for_select(AccountCategory.where(:enable=>true).all, 'id', 'title',account.account_category_id),{},{:class=>"form-control"} %>
  </div>
  <div class="form-group">
    <%= form.label :transaction_date %>
    <%= form.date_field :transaction_date, :class => "form-control", :required => "required" %>
  </div>
  <div class="form-group">
    <%= form.label :cash %>
    <%= form.number_field :cash, :class => "form-control", :required => "required" %>
  </div>
  <div class="form-group">
    <%= form.label :credit %>
    <%= form.number_field :credit, :class => "form-control", :required => "required" %>
  </div>
  <div class="form-group">
    <%= form.label :point %>
    <%= form.number_field :point, :class => "form-control", :required => "required" %>
  </div>
  <div class="form-group">
    <%= form.submit :class => 'btn btn-primary btn-block btn-lg' %>
  </div>
<% end %>

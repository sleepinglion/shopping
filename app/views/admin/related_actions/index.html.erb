<div class="row">
	<h3 class="col-xs-12 col-sm-6"><%= @controller_name %> <%= actionNameChange controller.action_name %></h3>
	<div class="col-xs-12 col-sm-6">
		<%=form_tag admin_related_actions_path,:method=>:get,:class=>"form-search pull-right" do %>
		<%= render :partial => 'layouts/admin/search_form' %>
		<% end %>
	</div>
</div>
<div class="table-responsive">
	<table class="table table-bordered table-striped">
		<colgroup>
			<col style="width:80px;" />
			<col />
			<col />			
			<col style="width:80px;" />
			<col style="width:100px;" />
			<% if can?(:update, RelatedAction) || can?(:delete, RelatedAction) %>
			<col <%= raw manage_width(RelatedAction) %> />
			<% end %>
		</colgroup>
		<thead>
			<tr>
				<th><%= t(:label_number) %></th>
				<th><%= t(:label_title) %></th>
				<th><%= t(:label_sub_title) %></th>				
				<th><%= t(:label_flag) %></th>
				<th><%= t(:label_created_at) %></th>
				<% if can?(:update, RelatedAction) || can?(:delete, RelatedAction) %>
				<th><%= t(:label_manage) %></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% unless @related_actions.empty? %>
			<% @related_actions.each do |related_action| %>
			<tr>
				<td><%= link_to related_action.id,admin_related_action_path(related_action) %></td>
				<td class="mw"><%= link_to related_action.title,admin_related_action_path(related_action) %></td>
				<td><%=related_action.sub_title %></td>
				<td><%= raw flagToString(related_action.enable) %></td>
				<td><%= related_action.created_at.to_date %></td>
				<% if can?(:update, RelatedAction) || can?(:delete, RelatedAction) %>
				<td> <% if can? :update, related_action %>
				<%= link_to edit_admin_related_action_path(related_action),:class=>"btn btn-default" do %> <i class="glyphicon glyphicon-pencil"></i> <%= t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, related_action %>
				<%= link_to admin_related_action_path(related_action), :method => :delete, :data => { :confirm => t(:delete_confirm) },:class=>"btn btn-danger" do %> <i class="glyphicon glyphicon-trash"></i> <%= t(:link_delete) %>
				<% end %>
				<% end %> </td>
				<% end %>
			</tr>
			<% end %>
			<% else %>
			<tr>
				<td colspan="5"><%= t(:no_data)%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create, RelatedAction %>
		<%= link_to new_admin_related_action_path,:class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @related_actions %>
</div>

<div class="row">
	<h3 class="col-xs-12 col-sm-6"><%= @controller_name %> <%= actionNameChange controller.action_name %></h3>
	<div class="col-xs-12 col-sm-6">
		<%=form_tag admin_gene_categories_path,:method=>:get,:class=>"form-search pull-right" do %>
		<%= render :partial => 'layouts/admin/search_form' %>
		<% end %>
	</div>
</div>
<div class="table-responsive">
	<table class="table table-bordered table-striped">
		<colgroup>
			<col style="width:80px;" />
			<col />
			<col />			
			<col style="width:80px;" />
			<col style="width:100px;" />
			<% if can?(:update, ReportCategory) || can?(:delete, ReportCategory) %>
			<col <%= raw manage_width(ReportCategory) %> />
			<% end %>
		</colgroup>
		<thead>
			<tr>
				<th><%= t(:label_number) %></th>
				<th><%= t(:label_title) %></th>
				<th><%= t(:label_color) %></th>				
				<th><%= t(:label_flag) %></th>
				<th><%= t(:label_created_at) %></th>
				<% if can?(:update, ReportCategory) || can?(:delete, ReportCategory) %>
				<th><%= t(:label_manage) %></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% unless @report_categories.empty? %>
			<% @report_categories.each do |report_category| %>
			<tr>
				<td><%= link_to report_category.id,admin_report_category_path(report_category) %></td>
				<td class="mw"><%= link_to report_category.title,admin_report_category_path(report_category) %></td>
				<td><%=report_category.color %></td>
				<td><%= raw flagToString(report_category.enable) %></td>
				<td><%= report_category.created_at.to_date %></td>
				<% if can?(:update, ReportCategory) || can?(:delete, ReportCategory) %>
				<td> <% if can? :update, report_category %>
				<%= link_to edit_admin_report_category_path(report_category),:class=>"btn btn-default" do %> <i class="glyphicon glyphicon-pencil"></i> <%= t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, report_category %>
				<%= link_to admin_report_category_path(report_category), :method => :delete, :data => { :confirm => t(:delete_confirm) },:class=>"btn btn-danger" do %> <i class="glyphicon glyphicon-trash"></i> <%= t(:link_delete) %>
				<% end %>
				<% end %> </td>
				<% end %>
			</tr>
			<% end %>
			<% else %>
			<tr>
				<td colspan="5"><%= t(:no_data)%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create, ReportCategory %>
		<%= link_to new_admin_report_category_path,:class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @report_categories %>
</div>

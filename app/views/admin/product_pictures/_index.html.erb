<section id="sl_product_pictures" class="sub_section">
	<h3><%=t('activerecord.models.product_picture')%></h3>
	<% unless @product_pictures.empty? %>
	<table  class="table table-striped table-bordered">
		<colgroup>
			<col />
			<col style="width:230px" />
			<col style="width:230px" />
			<col style="width:100px"  />
			<% if can?(:update, ProductPicture) || can?(:delete, ProductPicture) %>
			<col <%=raw manage_width(ProductPicture) %> />
			<% end %>
		</colgroup>
		<thead>
			<tr>
				<th><%=t(:label_image)%></th>
				<th><%=t(:label_created_at)%></th>
				<th><%=t(:label_updated_at)%></th>
				<th><%=t(:label_flag)%></th>
				<% if can?(:update, ProductPicture) || can?(:delete, ProductPicture) %>
				<th><%=t(:label_manage)%></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<%= render @product_pictures %>
		</tbody>
	</table>
	<% else %>
	<p><%=t(:no_data) %></p>
	<% end %>
	<% if can? :create, ProductPicture %>
	<div id="sl_product_pictures_form">
		<%= render "admin/product_pictures/form" %>
	</div>
	<div class="clearfix">&nbsp;</div>
	<% end %>
</section>
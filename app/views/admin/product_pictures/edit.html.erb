<%= form_for [:admin,@product_picture.product,@product_picture] do |f| %>
 	<div class="form-group">
 		<%= f.label :photo %>
			<% if @product_picture.photo? %>
				<%= image_tag(@product_picture.photo.medium_thumb) %>
				<br />
			<% end %> 		
 		<%= f.file_field :photo %>
 		<%= f.hidden_field :photo_cache %>
 	</div>
 	<div class="form-group"> 	 	
 		<%= f.label :enable %> 		
 		<%= f.check_box :enable %>
 	</div> 	
 	<div class="form-group actions">
 		<%= f.submit :class=>"btn btn-primary" %>
 	</div>
<% end %>
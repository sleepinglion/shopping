<%= form_for [:admin,@gene] do |f| %>
<% if @gene.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
	<a href="#" class="close" data-dismiss="alert">&times;</a>
	<h2><%= pluralize(@gene.errors.count, "error") %> prohibited this request from being saved:</h2>
	<ul>
		<% @gene.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="form-group">
	<%= f.label :gene_category_ids %>
	<div>	
<%= f.collection_check_boxes(:gene_category_ids, GeneCategory.where(:enable=>true).all, :id, :title,{:include_hidden=>false}) do |gene_category| %>
  <%= gene_category.check_box %>
  <%= gene_category.label :style=>'margin-right:20px' %>  
<% end %>
	</div>
</div>
<div class="form-group">
	<%= f.label :gene_relation_ids %>
	<div>
<%= f.collection_check_boxes(:gene_relation_ids, GeneRelation.where(:enable=>true).all, :id, :title,{:include_hidden=>false}) do |gene_relation| %>
  <%= gene_relation.check_box %>
  <%= gene_relation.label :style=>'margin-right:20px' %>  
<% end %>
	</div>
</div>
<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :sub_title %>
	<%= f.text_field :sub_title,:class=>"form-control",:required=>"required" %>
</div>	
<div class="form-group">
	<%= f.label :description %>
	<%= f.text_area :description,:id=>"sl_content",:class=>"form-control",:rows=>10,:cols=>50,:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :enable %>
	<%= f.check_box :enable %>
</div>
<div class="form-group actions">
	<%= f.submit :class=>"btn btn-primary" %>
</div>
<% end %>

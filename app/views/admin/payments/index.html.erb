<div class="row">
	<h3 class="col-xs-12 col-sm-6"><%= @controller_name %> <%= actionNameChange controller.action_name %></h3>
	<div class="col-xs-12 col-sm-6">
		<%=form_tag admin_payments_path,:method=>:get,:class=>"form-search pull-right" do %>
		<%= render :partial => 'layouts/admin/search_form' %>
		<% end %>
	</div>
</div>
<div class="table-responsive">
	<table class="table table-bordered table-striped">
		<colgroup>
			<col style="width:80px;" />
			<col />
			<col style="width:80px;" />
			<col style="width:100px;" />
			<% if can?(:update, Payment) || can?(:delete, Payment) %>
			<col <%= raw manage_width(Payment) %> />
			<% end %>
		</colgroup>
		<thead>
			<tr>
				<th><%= t(:label_number) %></th>
				<th><%= t(:label_title) %></th>
				<th><%= t(:label_flag) %></th>
				<th><%= t(:label_created_at) %></th>
				<% if can?(:update, Payment) || can?(:delete, Payment) %>
				<th><%= t(:label_manage) %></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% unless @payments.empty? %>
			<% @payments.each do |payment| %>
			<tr>
				<td><%= link_to payment.id,admin_payment_path(payment) %></td>
				<td class="mw"><%= link_to payment.title,admin_payment_path(payment) %></td>
				<td><%= raw flagToString(payment.enable) %></td>
				<td><%= payment.created_at.to_date %></td>
				<% if can?(:update, Payment) || can?(:delete, Payment) %>
				<td> <% if can? :update, payment %>
				<%= link_to edit_admin_payment_path(payment),:class=>"btn btn-default" do %> <i class="glyphicon glyphicon-pencil"></i> <%= t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, payment %>
				<%= link_to admin_payment_path(payment), :method => :delete, :data => { :confirm => t(:delete_confirm) },:class=>"btn btn-danger" do %> <i class="glyphicon glyphicon-trash"></i> <%= t(:link_delete) %>
				<% end %>
				<% end %> </td>
				<% end %>
			</tr>
			<% end %>
			<% else %>
			<tr>
				<td colspan="5"><%= t(:no_data)%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create, Payment %>
		<%= link_to new_admin_payment_path,:class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @payments %>
</div>

<% if notice %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<div class="sl_show">
	<% if(@order.user_id) %>	
	<article>
		<h4><%=t(:label_user)%></h4>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th><%=t(:label_name)%></th>
					<th><%=t(:label_email)%></th>
					<th><%=t(:label_phone)%></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%=@order.user.name %></td>
					<td><%=@order.user.email %></td>
					<td><%=@order.user.phone %></td>
				</tr>
			</tbody>
		</table>
	</article>
	<% else %>
	<article>
		<h4><%=t(:label_user)%></h4>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th><%=t(:label_name)%></th>
					<th><%=t(:label_email)%></th>
					<th><%=t(:label_phone)%></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%=@order.guest.name %></td>
					<td><%=@order.guest.email %></td>
					<td><%=@order.guest.phone %></td>
				</tr>
			</tbody>
		</table>
	</article>
	<% end %>
	<article>
		<h4><%=t(:label_shipping)%></h4>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th><%=t(:label_name)%></th>					
					<th><%=t(:label_zip)%></th>
					<th><%=t(:label_address_default)%></th>
					<th><%=t(:label_address_detail)%></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%=@order.shipping.name %></td>
					<td><%=@order.shipping.zip_code %></td>
					<td><%=@order.shipping.address_default %></td>
					<td><%=@order.shipping.address_detail %></td>					
				</tr>
			</tbody>
		</table>		
	</article>
	<article>
		<h4><%=t(:label_payment)%></h4>
		<p><%=@order.payment.title %>
		</p>
	</article>
	<p>
		<b><%=t(:label_flag) %></b>
		<%=raw flagToString(@order.enable) %>
	</p>
	<p>
  	<b><%=t(:label_created_at) %></b>
  	<%= @order.created_at %>
  </p>
  <p>
  	<b><%=t(:label_updated_at) %></b>
  	<%= @order.created_at %>
  </p>
</div>
<% if can? :update, Order %>		
<%= link_to t(:link_edit), edit_admin_order_path(@order) %> |
<% end %>
<%= link_to t(:link_list), admin_orders_path() %>

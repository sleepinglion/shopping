<div class="row">
	<h3 class="col-xs-12 col-sm-6"><%= @controller_name %> <%= actionNameChange controller.action_name %></h3>
	<div class="col-xs-12 col-sm-6">
		<%=form_tag admin_orders_path,:method=>:get,:class=>"form-search pull-right" do %>
		<%= render :partial => 'layouts/admin/search_form' %>
		<% end %>
	</div>
</div>
<div class="table-responsive">
	<table class="table table-bordered table-striped">
		<colgroup>
			<col style="width:80px;" />
			<col />
			<col />
			<col />
			<col />						
			<col style="width:100px;" />
			<col style="width:80px;" />
			<col style="width:100px;" />
			<% if can?(:update, Order) || can?(:delete, Order) %>
			<col <%= raw manage_width(Order) %> />
			<% end %>
		</colgroup>
		<thead>
			<tr>
				<th><%= t(:label_number) %></th>				
				<th><%= t(:label_user) %></th>
				<th><%= t(:label_email) %></th>
				<th><%= t(:label_phone) %></th>								
				<th><%= t(:label_shipping) %></th>
				<th><%= t(:label_payment) %></th>
				<th><%= t(:label_flag) %></th>
				<th><%= t(:label_created_at) %></th>
				<% if can?(:update, Order) || can?(:delete, Order) %>
				<th><%= t(:label_manage) %></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% unless @orders.empty? %>
			<% @orders.each do |order| %>
			<tr>
				<td><%= link_to order.id,admin_order_path(order) %></td>
				<td>
					<% if(order.user_id) %>
					<%= link_to order.user.name,admin_user_path(order.user_id) %>
					<% else %>
					<%= link_to order.guest.name+'('+t(:label_guest)+')',admin_guest_path(order.guest) %>
					<% end %>
				</td>
				<td>
					<% if(order.user_id) %>
					<%= link_to order.user.email,admin_user_path(order.user_id) %>
					<% else %>
					<%= link_to order.guest.email,admin_guest_path(order.guest) %>
					<% end %>
				</td>
				<td>
					<% if(order.user_id) %>
					<%= link_to order.user.phone,admin_user_path(order.user_id) %>
					<% else %>
					<%= link_to order.guest.phone,admin_guest_path(order.guest) %>
					<% end %>
				</td>
				<td><%= link_to order.shipping.name+' / ('+order.shipping.zip_code+') '+order.shipping.address_default+' '+order.shipping.address_detail,admin_shipping_path(order.shipping_id) %></td>
				<td class="mw">
					<%= link_to order.payment.title,admin_payment_path(order.payment_id) %></td>
				<td><%= raw flagToString(order.enable) %></td>
				<td><%= order.created_at.to_date %></td>
				<% if can?(:update, Order) || can?(:delete, Order) %>
				<td> <% if can? :update, order %>
				<%= link_to edit_admin_order_path(order),:class=>"btn btn-default" do %> <i class="glyphicon glyphicon-pencil"></i> <%= t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, order %>
				<%= link_to admin_order_path(order), :method => :delete, :data => { :confirm => t(:delete_confirm) },:class=>"btn btn-danger" do %> <i class="glyphicon glyphicon-trash"></i> <%= t(:link_delete) %>
				<% end %>
				<% end %> </td>
				<% end %>
			</tr>
			<% end %>
			<% else %>
			<tr>
				<td colspan="9"><%= t(:no_data)%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create, Order %>
		<%= link_to new_admin_order_path,:class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @orders %>
</div>
